<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="display-4"><strong>Check in</strong></h2>
  <p>On this page you can sign in to our Barber Shop</p>
</div>

<script type="text/javascript">
$(function(){

  // function defines method in jqery
  // multiline code can be executed inside it
 
 $('#color').simplecolorpicker();
 $('#datetimepicker').datetimepicker();
 // $('#datetimepicker').setLocale('en'); 

});  
</script>

<div class="container">
<form action="/visit" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Your name:</label>
    <input name="client[name]" type="text" class="form-control" value="" placeholder="Enter your name">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Your phone:</label>
    <input name="client[phone]" type="text" class="form-control" value="" placeholder="Enter your phone">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Date and Time:</label>
    <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" value="" placeholder="Enter Date & Time">
  </div>

  <div class="form-group">
  	<p> Select barber: </p>
	<select name="client[barber]" class="form-control">
    <%@barbers.each do |row|%>
	  <option <%= @prefered_barber == row['name'] ? 'selected' : '' %>><%= row['name'] %></option>
    <%end%>
	</select>
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Paint color:</label>
      <select id="color" name="client[color]">
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
      </select>
  </div>

  <input type="submit" value = "Check in" class="btn btn-primary"></input> 
</form>
</div>